<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Calculator.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="600"
        x:Class="Calculator.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Calculator">

    <Window.Styles>
	<Style Selector="Button.Action">
		<Setter Property="Background" Value="#8499f9"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="70"/>
        <Setter Property="CornerRadius" Value="35"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>
    <Style Selector="Button.Numpad">
		<Setter Property="Background" Value="#f7f7f9"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="70"/>
        <Setter Property="CornerRadius" Value="35"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>
    </Window.Styles>
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Border Padding="15">
        
		<!-- Create a Grid for the buttons-->
    <Grid>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="4" Text="{Binding Greeting}" FontSize="32" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>
		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

             <!-- Make a bunch of buttons for the calculator-->

             <!-- Numpad -->
             <!-- First Column -->
             <Button Grid.Row="3" Grid.Column="0" Content="7" Classes="Numpad"></Button>
             <Button Grid.Row="4" Grid.Column="0" Content="4" Classes="Numpad"></Button>
            <Button Grid.Row="5" Grid.Column="0" Content="1" Classes="Numpad"></Button>
            
            <!-- Second Column -->
            <Button Grid.Row="3" Grid.Column="1" Content="8" Classes="Numpad"></Button>
             <Button Grid.Row="4" Grid.Column="1" Content="5" Classes="Numpad"></Button>
            <Button Grid.Row="5" Grid.Column="1" Content="2" Classes="Numpad"></Button>
            <Button Grid.Row="6" Grid.Column="1" Content="0" Classes="Numpad"></Button>
            <Button Grid.Row="6" Grid.Column="2" Content="." Classes="Numpad"></Button>

            <!-- Third Column -->
             <Button Grid.Row="3" Grid.Column="2" Content="9" Classes="Numpad"></Button>
             <Button Grid.Row="4" Grid.Column="2" Content="6" Classes="Numpad"></Button>
            <Button Grid.Row="5" Grid.Column="2" Content="3" Classes="Numpad"></Button>

             <!-- Action Buuttons -->
             <!-- Random Stuff -->
            <Button Grid.Row="1" Grid.Column="0" Content="%" Classes="Action"></Button>
            <Button Grid.Row="1" Grid.Column="1" Content="CE" Classes="Action"></Button>
            <Button Grid.Row="1" Grid.Column="2" Content="C" Classes="Action"></Button>
            <Button Grid.Row="1" Grid.Column="3" Content="⌫" Classes="Action"></Button>
            <Button Grid.Row="2" Grid.Column="0" Content="⅟" Classes="Action"></Button>
            <Button Grid.Row="2" Grid.Column="1" Content="▯²" Classes="Action"></Button>
            <Button Grid.Row="2" Grid.Column="2" Content="√" Classes="Action"></Button>
            <Button Grid.Row="6" Grid.Column="0" Content="±" Classes="Numpad"></Button>

            <!-- Actual Operations -->
            <Button Grid.Row="2" Grid.Column="3" Content="÷" Classes="Action"></Button>
            <Button Grid.Row="3" Grid.Column="3" Content="×" Classes="Action"></Button>
            <Button Grid.Row="4" Grid.Column="3" Content="−" Classes="Action"></Button>
            <Button Grid.Row="5" Grid.Column="3" Content="+" Classes="Action"></Button>
            <Button Grid.Row="6" Grid.Column="3" Content="=" Classes="Action"></Button>

    </Grid>
    </Border>

    

   


</Window>
